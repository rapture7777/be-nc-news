{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all topics",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves the specified article from its article_id including a comments_count",
    "parameters": "article_id",
    "queries": [],
    "exampleResponse": {
      "article": [
        {
          "article_id": 7,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "votes": 3,
          "created_at": 1527695953341,
          "comments_count": 5
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the value of the votes key for a specified article and returns the updated article",
    "parameters": "article_id",
    "queries": [],
    "exampleRequestBody": { "inc_votes": 1 },
    "exampleResponse": {
      "article": [
        {
          "article_id": 7,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "votes": 4,
          "created_at": 1527695953341
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a comment to the comments table with referencing the article_id specified and returns the comment object",
    "parameters": "article_id",
    "queries": [],
    "exampleRequestBody": {
      "username": "joe_bloggs",
      "body": "Example comment."
    },
    "exampleResponse": {
      "comment": [
        {
          "comment_id": 1,
          "author": "joe_bloggs",
          "article_id": 100,
          "votes": 0,
          "created_at": 122334565666,
          "body": "Example comment."
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "gets all comments associated with the specified article_id and returns an array",
    "parameters": "article_id",
    "queries": [
      "'sort_by' - defaults to 'created_at'",
      "'order' defaults to 'desc'"
    ],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "author": "joe_bloggs",
          "votes": 0,
          "created_at": 3,
          "body": "Example comment."
        },
        {
          "comment_id": 2,
          "author": "jane_bloggs",
          "votes": 0,
          "created_at": 2,
          "body": "Example comment."
        },
        {
          "comment_id": 3,
          "author": "jimmy_bloggs",
          "votes": 0,
          "created_at": 1,
          "body": "Example comment."
        }
      ]
    }
  },
  "PATCH /api/comments/:comment_id": {
    "description": "updates the votes value for the specified comment from the comment_id and returns the updated comment object",
    "parameters": "comment_id",
    "queries": [],
    "exampleRequestBody": { "inc_votes": 1 },
    "exampleResponse": {
      "comment": [
        {
          "comment_id": 1,
          "author": "joe_bloggs",
          "votes": 1,
          "created_at": 3,
          "body": "Example comment."
        }
      ]
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "Deletes the specified comment by comment_id. Responds only with status 204 when successful.",
    "parameters": "comment_id",
    "queries": []
  }
}
